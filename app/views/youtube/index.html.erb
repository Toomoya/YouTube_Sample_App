<h1>YouTube Sample</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-4 col-xs-12">
      <h1>投稿する</h1>
      <div class="card">
        <div class="card-body">
          <%= form_for @youtube, :url => {:action => :create} do |f| %>
            <h3>song</h3>
            <%= f.text_field :song, :class => "form-control"%>
            <h3>artist</h3>
            <%= f.text_field :artist, :class => "form-control"%>
            <div class="action">
              <%= f.submit "投稿する", :class => "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
    <div class="col-sm-8 col-xs-12">
      <h1>投稿一覧</h1>
      <div class="row">
        <% @youtubes.each do |youtube| %>
          <div class="col-lg-6 col-md-12">
            <div class="card border-success">
              <div class="card-body">
                <h5 class="card-title">
                  <%= youtube.song %>/<%= youtube.artist %>
                </h5>
                <%= link_to "詳細へ", youtube_path(youtube.id), :class => "btn btn-primary"%><br>
              </div>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>

</div>
