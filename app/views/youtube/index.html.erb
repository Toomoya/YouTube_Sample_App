<h1 class="hit-the-floor">YouTube Sample</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-4 col-xs-12">
      <h1 class="hit-the-floor">投稿する</h1><br>
      <div class="card border-info text-white bg-dark">
        <div class="card-body">
          <%= form_for @youtube, :url => {:action => :create} do |f| %>
            <h3>曲名</h3>
            <%= f.text_field :song, :class => "form-control"%>
            <h3>アーティスト名</h3>
            <%= f.text_field :artist, :class => "form-control"%><br>
            <div class="action">
              <%= f.submit "投稿する", :class => "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
    <div class="col-lg-8 col-xs-12">
      <h1 class="hit-the-floor">投稿一覧</h1>
      <div class="page-info">
        <%= page_entries_info @youtubes %>
      </div>
      <div class="row">
        <% @youtubes.each do |youtube| %>
          <div class="col-lg-6 col-md-12">
            <div class="card border-info text-white bg-dark">
              <div class="card-body">
                <h5 class="card-title">
                  <%= youtube.song %>/<%= youtube.artist %>
                </h5>
                <%= time_ago_in_words(youtube.created_at) %> ago<br>
                <%= link_to "詳細へ", youtube_path(youtube.id), :class => "btn btn-primary"%><br>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <%= paginate @youtubes %>
    </div>
  </div>

</div>
